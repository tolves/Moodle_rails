<!DOCTYPE html>
<html>
<head>
  <title>MoodleRails</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '///ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css' %>

</head>

<body id="background">

<div class="d-flex container" id="wrapper">
  <% if user_signed_in? %>
    <div class="bg-light border-right" id="sidebar-wrapper">
      <%= render 'layouts/left_menu' %>
    </div>
    <div id="page-content-wrapper">
      <div id="nav" class="container-fluid">
        <%= render 'layouts/nav' %>
      </div>
      <div id="page-content" class="container">
        <%= render 'layouts/flash' %>
        <%= render 'layouts/header' %>
        <div class="bg-light mt-3 p-4">
          <%= yield %>
        </div>
      </div>
    </div>
  <% else %>
    <%= video_tag('bg.mp4', id: 'background_video', autoplay: true, loop: true, muted: true) %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-3 text-center bg-light opacity-9 mt-6">
          <%= render 'layouts/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
  <% end %>
  <div id="ajax-indicator" style="display:none;"><span><%= t(:label_loading) %></span></div>
  <div id="ajax-modal" style="display:none;"></div>
  <div id="bottom"><%= render 'layouts/footer' %></div>
</div>
</body>
</html>
