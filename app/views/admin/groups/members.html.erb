<% @users.each do |user| %>
  <% cache user do %>
    <p><%= user.full_name %></p>
  <% end %>
<% end %>

<%= form_for @group, url: admin_group_member_new_path(@group), method: :post do |f| %>
  <div class="field">
    <%= f.text_field :name, autocomplete: "name", placeholder: :group_name, class: "p-1 border-1" %>
  </div>
  <br/>
  <br/>
  <div class="actions">
    <%= f.submit data: { "disable-with": "Saving..." } %>
  </div>

<% end %>