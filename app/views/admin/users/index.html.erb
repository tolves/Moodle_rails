<div class="table-responsive">
  <table id='users' class="table table-sm table-hover table-striped">
    <tr>
      <th>id</th>
      <th>email</th>
      <th>fullname</th>
      <th>role</th>
      <th>edit</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, admin_user_path(user) %></td>
        <td><%= user.full_name %></td>
        <td><%= user.role.name %></td>
        <td><%= button_to edit_admin_user_path(user), method: :get do %>
            <%= fa_icon "edit" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>