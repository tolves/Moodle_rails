<%= form_for authority, url: path, method: method do |f| %>
  <%= hidden_field_tag :role_id, params[:role_id] %>
  <div class="field">
    <!--    todo: provide better presentation of policy selection, and ignore the policy has attached-->
    <%= f.label :controller_name %> <br/>

    <%== f.select :controller_name, @controllers, prompt: "Pick a Controller" %>
  </div>
  <br/>

  <div class="field">
    <%= f.label :action_names %>
    <div id="action_names">
    </div>
    <%#== f.select :action_names, '', prompt: "Pick a Controller First" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit data: {"disable-with": "Saving..."} %>
  </div>
<% end %>